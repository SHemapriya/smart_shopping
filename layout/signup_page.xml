<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Customer Signup"
    android:textSize="25dp"
    android:layout_marginTop="10dp"
    android:id="@+id/tv_f"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
    />
    <EditText
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/et_name"
        />
    <EditText
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/et_password1"
        />
    <EditText
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:hint="City"
        android:inputType="text"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/et_city1"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:hint="Enter your postal address"
        android:inputType="text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/et_pa1"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/et_email2"
        />
    <EditText
    android:layout_width="356dp"
    android:layout_height="wrap_content"
    android:hint="Enter your number"
    android:inputType="text"
    android:textStyle="bold"
    android:textSize="20dp"
    android:layout_marginTop="20dp"
    android:id="@+id/et_mno1"
    />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Signup"
        android:background="#00D6FF"
        android:textColor="#4D0761"
        android:id="@+id/btn_signup"/>



</LinearLayout>
